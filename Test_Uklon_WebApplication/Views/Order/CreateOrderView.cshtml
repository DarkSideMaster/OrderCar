@model Test_Uklon_WebApplication.Models.Order;

@{
    ViewData["Title"] = "CreateOrdersView";
}

<h2>Add new order</h2>

<form asp-action="Create" asp-controller="Order" asp-antiforgery="true">
    <div class="container-fluid">
        <table class="table table-bordered tablecreate">
            <tr>
                <td>
                    <label asp-for="AddressFrom"></label>
                </td>
                <td>
                    <input type="text" asp-for="AddressFrom" />
                    <br/>
                    <span asp-validation-for="AddressFrom" class="validationcolor"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="AddressTo"></label>
                </td>
                <td>
                    <input asp-for="AddressTo" />
                    <br/>
                    <span asp-validation-for="AddressTo" class="validationcolor"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Phone"></label>
                </td>
                <td>
                    <input asp-for="Phone" />
                    <br/>
                    <span asp-validation-for="Phone" class="validationcolor"></span>
                </td>
            </tr>
        </table>
    </div>
    <input type="submit" value="Save"  class="btn btn-success"/>
</form>